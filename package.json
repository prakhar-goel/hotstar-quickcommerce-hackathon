{
    "name": "hotstar_plugin",
    "version": "0.1.18",
    "author": "MAXTAP",
    "license": "MIT",
    "main": "dist/index.js",
    "typings": "dist/index.d.ts",
    "files": [
        "dist"
    ],
    "engines": {
        "node": ">=10"
    },
    "scripts": {
        "build": "npm run build:node && npm run webpack",
        "start:node": "tsdx watch",
        "build:node": "tsdx build",
        "test": "tsdx test",
        "lint": "tsdx lint",
        "size": "size-limit",
        "analyze": "size-limit --why",
        "webpack": "webpack",
        "webpack:w": "webpack -w",
        "cypress:open": "cypress open"

    },
    "husky": {
        "hooks": {
            "pre-commit": "tsdx lint"
        }
    },
    "prettier": {
        "printWidth": 80,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "es5"
    },
    "module": "dist/maxtap_node_module.esm.js",
    "size-limit": [
        {
            "path": "dist/maxtap_node_module.cjs.production.min.js",
            "limit": "10 KB"
        },
        {
            "path": "dist/maxtap_node_module.esm.js",
            "limit": "10 KB"
        }
    ],
    "devDependencies": {
        "@babel/core": "^7.16.7",
        "@babel/preset-env": "^7.16.7",
        "@babel/runtime": "^7.16.7",
        "@size-limit/preset-small-lib": "^7.0.5",
        "autoprefixer": "^10.4.2",
        "babel-loader": "^8.2.3",
        "css-loader": "^6.5.1",
        "cypress": "^9.3.1",
        "husky": "^7.0.4",
        "less": "^4.1.2",
        "less-loader": "^10.2.0",
        "regenerator-runtime": "^0.13.9",
        "rollup-plugin-postcss": "^4.0.2",
        "size-limit": "^7.0.5",
        "style-loader": "^3.3.1",
        "ts-loader": "^9.2.6",
        "tsdx": "^0.14.1",
        "tslib": "^2.3.1",
        "typescript": "^3.9.10",
        "typescript-plugin-css-modules": "^3.4.0",
        "webpack": "^5.65.0",
        "webpack-cli": "^4.9.1"
    },
    "repository": {
        "type": "git",
        "url": "https://gitlab.com/maxtap/javascript-plugin"
    },
    "dependencies": {
        "platform": "^1.3.6",
        "rollup-plugin-replace": "^2.2.0"
    }
}
